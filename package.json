{
  "name": "opium-ui",
  "version": "1.0.0",
  "main": "dist/index.js",
  "dependencies": {
    "hotkeys-js": "^3.8.7",
    "opium-filter": "^1.0.1",
    "react-helmet": "^6.1.0",
    "themeor": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/react-helmet": "^6.1.1",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "watch": "npm run icons:build && nodemon -e ts,tsx,json,svg,png -w ./src -x npm run build",
    "link": "npm link react",
    "unlink": "npm unlink react themeor",
    "build:docs": "react-scripts build",
    "clear": "rm -fr ./dist && mkdir dist",
    "icons:parse": "node ./scripts/parse-icons",
    "icons:copy": "copyfiles -V -u 1 src/**/*.svg dist",
    "icons:build": "npm run icons:parse && npm run icons:copy",
    "build": "tsc -p tsconfig.dist.json",
    "publish": "npm run clear && npm run icons:build && npm run build && npm publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

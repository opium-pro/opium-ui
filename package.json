{
  "name": "opium-ui",
  "version": "0.1.0-alpha2",
  "main": "dist/index.js",
  "dependencies": {
    "react-helmet": "^6.1.0",
    "react-tooltip": "^4.2.21",
    "themeor": "^1.0.6"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/react-helmet": "^6.1.1",
    "nodemon": "^2.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "watch": "npm run clear && npm run icons && nodemon -e ts,tsx,json,svg,png -w ./src -x npm run build",
    "link": "npm link react",
    "unlink": "npm unlink react",
    "build:docs": "react-scripts build",
    "clear": "rm -fr ./dist && mkdir dist",
    "icons": "node ./scripts/parse-icons && rsync -a --include '*/' --include '*.svg' --exclude '*' src/* dist",
    "build": "tsc -p tsconfig.dist.json",
    "publish": "npm run clear && npm run icons && npm run build && npm publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
